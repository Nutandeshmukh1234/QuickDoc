<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP_Activity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="@font/alike"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Enter The OTP Sent To"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/alike"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginTop="16sp"
        android:layout_margin="22sp">

        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:id="@+id/etOtpVerification1"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:fontFamily="@font/alike"
            android:textSize="14sp"/>

        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:id="@+id/etOtpVerification2"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:fontFamily="@font/alike"
            android:textSize="14sp"/>

        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:id="@+id/etOtpVerification3"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:fontFamily="@font/alike"
            android:textSize="14sp"/>

        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:layout_margin="10sp"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:id="@+id/etOtpVerification4"
            android:textStyle="bold"
            android:fontFamily="@font/alike"
            android:textSize="14sp"/>
        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:id="@+id/etOtpVerification5"
            android:textStyle="bold"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:fontFamily="@font/alike"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textSize="14sp"/>
        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:textAlignment="center"
            android:importantForAutofill="no"
            android:layout_margin="10sp"
            tools:ignore="LabelFor"
            android:id="@+id/etOtpVerification6"
            android:textStyle="bold"
            android:fontFamily="@font/alike"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alike"
            android:text="Didn't Receive The OTP?"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResendOTP"
            android:text="Resend OTP"
            android:textColor="@color/red"
            android:fontFamily="@font/alike"
            android:textStyle="bold"
            android:layout_marginLeft="5sp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btnVerify1"
        android:text="VERIFY"
        android:background="@drawable/loginbutton"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"/>


</LinearLayout>