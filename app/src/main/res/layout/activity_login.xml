<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/doctor1">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tvSignText"
    android:text=" LOGIN HERE"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textAlignment="center"
    android:layout_margin="50dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/etUsernameTitle"
        android:hint=" Username"
        android:inputType="text"
        android:paddingLeft="9sp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/icon_portrait"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@drawable/login_design"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/etPasswordTitle"
        android:layout_gravity="center_horizontal"
        android:hint=" Password "
        android:drawableLeft="@drawable/icon_lock"
        android:padding="15dp"
        android:inputType="textPassword"
        android:paddingLeft="9sp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/login_design"
        android:layout_margin="16dp"/>

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/cbShowPassword"
        android:text="Show Password"
        android:layout_margin="17dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:checked="false"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/btnLogin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/loginbutton"
        android:text=" Login "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:padding="10sp"
        android:shadowRadius="25"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvForgotText"
        android:text=" Forgot Password? "
        android:textSize="18dp"
        android:textColor="@color/light_blue"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="16sp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.50"
            android:id="@+id/ivGoogleImage"
            android:src="@drawable/google1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="40sp"
            android:layout_weight="1.0"
            android:id="@+id/tvContactWedSiteText"
            android:textColor="@color/black"
            android:text=" Sign in With Google"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNewUser"
        android:text="New User Register Here"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>


</LinearLayout>