<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/etUpdateName"
            android:hint="  Name"
            android:inputType="text"
            android:paddingLeft="9sp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_portrait"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@drawable/login_design"
            android:layout_margin="16dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/etUpdateMobileNumber"
            android:enabled="false"
            android:hint="  Mobile Number"
            android:inputType="number"
            android:paddingLeft="9sp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_phone"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@drawable/login_design"
            android:layout_margin="16dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/etUpdateEmailId"
            android:hint="  Email Id"
            android:inputType="text"
            android:paddingLeft="9sp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_email"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@drawable/login_design"
            android:layout_margin="16dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/etUpdateUsername"
            android:hint="  Username"
            android:inputType="text"
            android:paddingLeft="9sp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_portrait"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@drawable/login_design"
            android:layout_margin="16dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/etUpdatePassword"
            android:hint="  Password"
            android:inputType="textPassword"
            android:paddingLeft="9sp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_lock"
            android:padding="15dp"
            android:textStyle="bold"
            android:background="@drawable/login_design"
            android:layout_margin="16dp"/>
        <CheckBox
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/cbShowPassword"
            android:text="Show Password"
            android:layout_margin="17dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:checked="false"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/btnUpadeteProfile"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/loginbutton"
            android:text=" Update Profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:padding="10sp"
            android:shadowRadius="25"/>



    </LinearLayout>
</ScrollView>